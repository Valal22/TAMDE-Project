@namespace(uri="market", prefix="")
package market;

/* A whole marketplace */
class Market {
    val Selection[*] selections;
}

/* A single product line on sale */
class Selection {
    attr String  name;    
    attr String  quality; 
    attr Double  price;    // same as fruit.price
    attr Integer  farmer_id;   // farmer.name (for display)
    attr Integer amount;   // amount offered
}
