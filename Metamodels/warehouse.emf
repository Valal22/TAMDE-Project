@namespace(uri="dw01", prefix="")
package warehouse;

/* Data‑warehouse container */
class DataWarehouse {
    val CustomerFact[*] customerFacts;
}

/* Aggregated view for one customer */
class CustomerFact {
    attr Integer customer_id;
    attr String  name;
    attr String  email;

    attr Double  total_spent;       // Σ(quantity × price)
    attr Integer total_orders;      // number of purchases
    attr String  last_purchase_date;// most-recent order
}
